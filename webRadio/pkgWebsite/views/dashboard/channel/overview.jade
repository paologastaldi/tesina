extends ./channelDashboardLayout.jade

block append head
    script(type='text/javascript').
        var page = "#overview";
        
block append content
    div.container-fluid(id="overview")
        div.row
            div.col-md-9.col-lg-9
                h1 Panoramica
                hr
                
                table.table.table-striped(style="color:black;")
                    tbody
                        tr
                            th Canale:
                            th #{channel.name}
                        tr
                            th ID canale:
                            th(id="channelId", name="channelId") #{channel.id}
                        tr
                            th Data creazione:
                            th #{channel.inputDate}
                        tr
                            th Stato canale:
                            th #{channel.active ? "Online" : "Offline"}
                                //div
                                    input(type="checkbox", name="chkActiveChannel", id="chkActiveChannel")
            div.col-md-3.col-lg-3
                div(id="aside-info")
                    div.row
                        div.thumbnail
                            img(src= "#{channel.thumbnail ? '../../img/' + channel.thumbnail : '../../../img/defaultThumbnail.jpg'}")
                    div.row.container-fluid
                        div.alert.alert-warning(role="alert")
                            strong Attenzione: 
                            | inserire immagini quadrate come thumbnail del canale radio (ex 12cm x 12cm)
                        form.row.container-fluid(method="POST", role="form", name="frmChangeThumbnail", id="frmChangeThumbnail", enctype='multipart/form-data', action="/dashboard/channel/modifyChannelThumbnail")
                            div.form-group
                                input.btn.btn-file.btn-default(type="file", name="channelThumbnail", id="channelThumbnail", accept=".jpg", style="width:100%;")
                            div.form-group
                                input.btn.btn-default(type="submit", name="btnChangeThumbnail", id="btnChangeThumbnail", value="Cambia thumbnail", style="width:100%;")